generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = "file:./dev.db"
}

model Element {
	id    Int    @id @default(autoincrement())
	name  String @unique
	monsterElements MonsterElement[]
	weapons Weapon[]
}

model Monster {
	id    Int    @id @default(autoincrement())
	name  String @unique
	monsterElements MonsterElement[]
	sets Set[]
	weapons Weapon[]
}

model MonsterElement {
	monsterId   Int
	elementId   Int
	type        MonsterElementType
	monster     Monster   @relation(fields: [monsterId], references: [id])
	element     Element   @relation(fields: [elementId], references: [id])

	@@id([monsterId, elementId])
}

model Set {
	id    Int    @id @default(autoincrement())
	name  String @unique
	monsterId Int
	monster Monster @relation(fields: [monsterId], references: [id])
	pieces Piece[]
}

model Piece {
	id    Int    @id @default(autoincrement())
	name  String @unique
	type PieceType
	setId Int
	set Set @relation(fields: [setId], references: [id])
	pieceSkills PieceSkill[]
}

model Skill {
	id    Int    @id @default(autoincrement())
	name  String @unique
	pieceSkills PieceSkill[]
	weaponSkills WeaponSkill[]
}

model PieceSkill {
	pieceId Int
	skillId Int
	piece Piece @relation(fields: [pieceId], references: [id])
	skill Skill @relation(fields: [skillId], references: [id])

	@@id([pieceId, skillId])
}

model Weapon {
	id    Int    @id @default(autoincrement())
	name  String @unique
	weaponTypeId Int
	weaponType WeaponType @relation(fields: [weaponTypeId], references: [id])
	elementId Int
	element Element @relation(fields: [elementId], references: [id])
	monsterId Int
	monster Monster @relation(fields: [monsterId], references: [id])
	weaponSkills WeaponSkill[]
}

model WeaponType {
	id     Int    @id @default(autoincrement())
	name   String @unique
	icon   String
	weapons Weapon[]
}

model WeaponSkill {
	weaponId Int
	skillId Int
	weapon Weapon @relation(fields: [weaponId], references: [id])
	skill Skill @relation(fields: [skillId], references: [id])

	@@id([weaponId, skillId])
}

enum MonsterElementType {
	MAIN
	WEAKNESS
}

enum PieceType {
	HELMET
	ARMOR
	GAUNTLETS
	BELT
	GREAVES
}
